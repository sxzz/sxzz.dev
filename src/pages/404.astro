---
import {
  getLangFromUrl,
  useTranslatedPath,
  useTranslations,
} from '../i18n/utils'
import Layout from '../layouts/Layout.astro'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const translatePath = useTranslatedPath(lang)
---

<Layout title={t('notFound.title')}>
  <main class="fade-in-up flex flex-1 flex-col items-center justify-center px-6 py-16">
    <h1 class="text-8xl text-stone-200 font-bold font-serif dark:text-stone-800">
      404
    </h1>
    <p class="mt-4 text-lg text-stone-600 dark:text-stone-400">
      {t('notFound.description')}
    </p>
    <a
      href={translatePath('/')}
      class="mt-8 rounded-lg bg-stone-800 px-6 py-2.5 text-sm text-white font-medium transition-colors duration-200 dark:bg-stone-200 hover:bg-stone-700 dark:text-stone-900 dark:hover:bg-stone-300"
    >
      {t('notFound.backHome')}
    </a>
  </main>
</Layout>
