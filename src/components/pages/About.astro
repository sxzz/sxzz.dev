---
import Layout from '../../layouts/Layout.astro'
import { getPageCopy } from '../../i18n/pages'
import type { Lang } from '../../i18n/utils'

interface Props {
  lang: Lang
}

const { lang } = Astro.props
const copy = getPageCopy('about', lang)
---

<Layout
  title={copy.title}
  description={copy.description}
>
  <main class="flex-1 px-6 py-16 md:px-12 flex justify-center">
    <article class="max-w-xl w-full space-y-10">
      <header class="fade-in-up" style="animation-delay: 80ms">
        <h1
          class="font-serif text-3xl md:text-4xl font-700 tracking-tight text-stone-900 dark:text-white"
        >
          {copy.heading}
        </h1>
      </header>

      <section
        class="space-y-4 text-stone-600 dark:text-stone-400 leading-relaxed fade-in-up"
        style="animation-delay: 160ms"
      >
        {copy.paragraphs.map((paragraph) => (
          <p>{paragraph}</p>
        ))}
      </section>
    </article>
  </main>
</Layout>
